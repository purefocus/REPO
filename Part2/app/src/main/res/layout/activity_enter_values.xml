<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.vcu.cmsc.assignment4.EnterValuesActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="422dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="44dp">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="btn_submit"
            android:text="Submit"/>

        <TextView
            android:id="@+id/word_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Word"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="274dp"/>

        <TextView
            android:id="@+id/synonym_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Synonym"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/entered_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:hint="Word"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/entered_synonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:ems="10"
            android:hint="Synonym"
            android:inputType="textPersonName"/>
    </GridLayout>
</android.support.constraint.ConstraintLayout>
